nextflow_process {

    name "test diversity module"
    script "modules/local/diversity/main.nf"
    process "DIVERSITY_SPATIAL_IR"

    test("should pass diversity analysis"){
        tag "modules"
        tag "modules_nfcore"
        tag "spatial-ir/diversity"
        tag "diversity"
        when {
            process {
                """
                input[0] = [
                    'pt16', "$baseDir/tests/data/pt16"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.indexed_bam.get(0).get(1)
                ).match() },
                { assert snapshot(
                    path(process.out.versions.get(0)).yaml
                ).match() }
            )
        }
    }
}