nextflow_process {

    name "test align module"
    script "modules/local/align/main.nf"
    process "ALIGN_MIXCR"

    test("should pass using dry_run flag"){
        tag "modules"
        tag "modules_nfcore"
        tag "spatial-ir/align/mixcr"
        tag "align/mixcr"
        tag "align/mixcr-dryrun"
        when {
            process {
                """
                input[0] = [
                    'pt16',
                    "$baseDir/tests/data/pt16",
                    'pt16_downsample_L001_R1_001.fastq.gz,pt16_downsample_L001_R2_001.fastq.gz',
                    "$baseDir/tests/data/pt16/spatial_ir/ir_fastq"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.indexed_bam.get(0).get(1)
                ).match() },
                { assert snapshot(
                    path(process.out.versions.get(0)).yaml
                ).match() }
            )
        }
    }
}