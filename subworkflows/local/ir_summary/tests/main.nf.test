nextflow_workflow {

    name "test ir summary quarto workflow"
    script "../main.nf"
    workflow "IR_SUMMARY"

    tag "subworkflows"
    tag "subworkflows_local"
    tag "ir_summary"

    config "conf/test.config"

    test("should pass summary single"){

        tag "ir_summary_single"

        setup {
            run("PREPROCESS_SPATIAL_IR") {
                script "modules/local/preprocess/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'pt15' ], "$baseDir/tests/data/test_15", "$baseDir/tests/data/test_15/spatial_rna", [], "1"
                    ]
                    """
                }
            }
        }

        when {
            params {
                outdir = "$outputDir"
            }
            workflow {
                """
                input[0] =  PREPROCESS_SPATIAL_IR.out.output_paths
                input[1] = Channel.of("$baseDir/tests/data/workflow_summary.yaml")
                input[2] = Channel.of("$baseDir/tests/data/spatial-ir-pipeline_software_versions.yml")
                """
            }
        }

        then {
            def stable_out_files = getAllFilesFromDir(params.outdir, false, null, null, ['spatial_ir_report/**'])

            assertAll(
                { assert workflow.success },
                { assert snapshot(
                        stable_out_files*.name,
                        workflow.out.versions,
                        path(workflow.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }

