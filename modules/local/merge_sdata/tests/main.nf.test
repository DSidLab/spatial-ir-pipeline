nextflow_process {

    name "test merge sdata summary"
    script "../main.nf"
    process "MERGE_SDATA"

    tag "modules"
    tag "modules_local"
    tag "merge_sdata"

    config "conf/test.config"

    test("should pass normal merge"){

        tag "merge_sdata_single"

        setup {
            run("PREPROCESS_SPATIAL_IR") {
                script "modules/local/preprocess/main.nf"
                process {
                    """
                    input[0] = [
                        [ id:'pt15' ], "$baseDir/tests/data/test_15", "$baseDir/tests/data/test_15/spatial_rna", [], "1"
                    ]
                    """
                }
            }
        }

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] =  PREPROCESS_SPATIAL_IR.out.output_paths
                    .map { sample -> sample[1] }
                    .collect()
                    .map { sample_paths ->
                        tuple([id: "merged"], sample_paths)
                    }
                """
            }
        }

        then {
            def stable_out_files = getAllFilesFromDir(params.outdir, false, null, null, ['**/merged_sdata.zarr'])

            assertAll(
                { assert process.success },
                { assert snapshot(
                        stable_out_files*.name,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }

    test("should pass merge with multiple samples"){

        tag "merge_sdata_multi"

        setup {
            run("PREPROCESS_SPATIAL_IR") {
                script "modules/local/preprocess/main.nf"
                process {
                    """
                    input[0] = Channel.of(
                        [
                            [ id:'pt15' ], "$baseDir/tests/data/test_15", "$baseDir/tests/data/test_15/spatial_rna", [], "1"
                        ],
                        [
                            [ id:'pt19' ], "$baseDir/tests/data/test_19", "$baseDir/tests/data/test_19/spatial_rna", [], "1"
                        ]
                    )
                    """
                }
            }
        }

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] =  PREPROCESS_SPATIAL_IR.out.output_paths
                    .map { sample -> sample[1] }
                    .collect()
                    .map { sample_paths ->
                        tuple([id: "merged"], sample_paths)
                    }
                """
            }
        }

        then {
            def stable_out_files = getAllFilesFromDir(params.outdir, false, null, null, ['**/merged_sdata.zarr'])

            assertAll(
                { assert process.success },
                { assert snapshot(
                        stable_out_files*.name,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }
}
