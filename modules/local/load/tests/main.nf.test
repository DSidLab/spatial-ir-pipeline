nextflow_process {

    name "test loading module"
    script "modules/local/load/main.nf"
    process "LOAD_SPATIAL_IR"
    tag "modules"
    tag "modules_local"
    tag "modules_load"
    tag "load"

    test("should pass loading"){
        tag "load_basic"
        when {
            process {
                """
                input[0] = [
                    [ id:'pt15' ], "$baseDir/tests/data/pt15", "$baseDir/tests/data/pt15/spatial_rna", "1"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                        process.out.output_paths,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }
}
