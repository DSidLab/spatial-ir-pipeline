nextflow_process {

    name "test spatial plotting module"
    script "../main.nf"
    process "SPATIAL_PLOTS"

    tag "modules"
    tag "modules_local"

    config "conf/test.config"

    test("should pass plotting"){

        tag "spatialplots"

        when {
            process {
                """
                input[0] = [
                    [ id:'pt15' ], "$baseDir/tests/data/pt15"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot( // process.out.output_paths,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }
}
