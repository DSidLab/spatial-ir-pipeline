nextflow_process {

    name "test spatial plotting module"
    script "modules/local/spatialplots/main.nf"
    process "SPATIAL_PLOTS"

    test("should pass plotting"){
        
        tag "modules"
        tag "modules_local"
        tag "spatialplots"

        when {
            process {
                """
                input[0] = [
                    'pt16', "$baseDir/tests/data/pt16"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.indexed_bam.get(0).get(1)
                ).match() },
                { assert snapshot(
                    path(process.out.versions.get(0)).yaml
                ).match() }
            )
        }
    }
}