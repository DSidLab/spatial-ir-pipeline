nextflow_process {

    name "test align module"
    script "modules/local/align/main.nf"
    process "ALIGN_MIXCR"

    test("should pass using dry_run flag"){
        tag "modules"
        tag "modules_local"
        tag "align"
        tag "mixcr"
        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    "$baseDir/tests/data/pt16",
                    'pt16_downsample_L001_R1_001.fastq.gz,pt16_downsample_L001_R2_001.fastq.gz',
                    "$baseDir/tests/data/pt16/spatial_ir/ir_fastq"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                        process.out.aligned_paths,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }
}