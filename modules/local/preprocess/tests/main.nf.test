nextflow_process {

    name "test preprocessing module"
    script "../main.nf"
    process "PREPROCESS_SPATIAL_IR"

    tag "modules"
    tag "modules_local"

    config "conf/test.config"

    test("should pass preprocessing"){

        tag "preprocess"

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                    [ id:'pt15' ], "$baseDir/tests/data/pt15", "$baseDir/tests/data/pt15/spatial_rna", "1"
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                        process.out.output_paths,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }
}
