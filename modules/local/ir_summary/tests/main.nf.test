nextflow_process {

    name "test ir summary module"
    script "../main.nf"
    process "IR_SUMMARY"

    tag "modules"
    tag "modules_local"

    config "conf/test.config"

    setup {
        run("PREPROCESS_SPATIAL_IR") {
            script "../../preprocess/main.nf"
            process {
                """
                input[0] = [
                    [ id:'pt15' ], "$baseDir/tests/data/pt15", "$baseDir/tests/data/pt15/spatial_rna", [], "1"
                ]
                """
            }
        }
    }

    test("should pass summary"){

        tag "ir_summary"

        when {
            process {
                """
                input[0] =  PREPROCESS_SPATIAL_IR.out.output_paths.map { tuple([ id:'pt15' ], "$baseDir/tests/data/pt15", "$baseDir/tests/data/pt15/spatial_rna", it[1], it[2]) }
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                        process.out.report,
                        process.out.versions,
                        path(process.out.versions[0]).yaml
                    ).match()
                }
            )
        }
    }
}
